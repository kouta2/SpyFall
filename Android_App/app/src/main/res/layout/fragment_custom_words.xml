<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.arvin.spyfall.Activities.Settings.CustomWords">

    <!-- TODO: Update blank fragment layout -->
    <android.support.design.widget.TextInputLayout
        android:background="@color/BackgroundColor"
        android:layout_width="match_parent"
        app:errorEnabled="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="match_parent"
        android:textColorHint="@color/MyAccent"
        app:hintTextAppearance="@style/MyHintText">
        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/custom_words"
            android:inputType="textMultiLine"
            android:hint="Words (comma seperated list of words)"
            android:backgroundTint="@color/MyAccent"
            android:textColor="#ffffff" />
    </android.support.design.widget.TextInputLayout>

</FrameLayout>
